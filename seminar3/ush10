/*
Ndërtoni një program që kërkon nga përdoruesi të vendosi muajin (1 për Janar, 2 për Shkurt etj.)
dhe më pas afishon numrin e ditëve në atë muaj. Për muajin shkurt të afishohet 28 ose 29 ditë.
*/
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
     System.out.print("Jepni ne numer nga 1 ne 12,i cili do ti korrespondoj muajve te vitit:");
     int nr=in.nextInt();
     switch(nr){
         case 1:
             //janar
             System.out.print("Muaji ka 31 dite.");
             break;
         case 2:
             //shkurt
             System.out.print("Muaji ka 28 ose 29 dite.");
             break;
         case 3:
             //mars
             System.out.print("Muaji ka 31 dite.");
             break;
         case 4:
             //prill
             System.out.print("Muaji ka 30 dite.");
             break;
         case 5:
             //maj
             System.out.print("Muaji ka 31 dite.");
             break;
         case 6:
             //qershor
             System.out.print("Muaji ka 30 dite.");
             break;
         case 7:
             //korrik
             System.out.print("Muaji ka 31 dite.");
             break;
         case 8:
             //gusht
             System.out.print("Muaji ka 31 dite.");
             break;
         case 9:
             //shtator
             System.out.print("Muaji ka 30 dite.");
             break;
         case 10:
             //tetor
             System.out.print("Muaji ka 31 dite.");
             break;
         case 11:
             //nentor
             System.out.print("Muaji ka 30 dite.");
             break;
         case 12:
             System.out.print("Muaji ka 31 dite.");
             break;
         default:
             System.out.print("Vlere jo e sakte.");

     }

    }
}




